<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waliahimanshu.courseracatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".CourseraCatalogueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LearningLifeCycleConfigChangeActivity" />
        <activity
            android:name=".ui.home.SearchActivity"
            android:configChanges="orientation|screenSize">


            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".ui.bottomNavigation.BottomNavActivity"
            android:label="@string/title_activity_bottom_nav"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name=".ui.bottomNavigation.AllCoursesActivity"
            android:label="@string/title_activity_bottom_nav"
            android:theme="@style/AppTheme">

        </activity>


    </application>

</manifest>